<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts Feed</title>
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  
  <style>
    body {
      background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
      min-height: 100vh;
      color: #e0e0e0;
    }
    [data-bs-theme="light"] body {
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      color: #212529;
    }

    .navbar-glass {
      background: rgba(30, 41, 59, 0.45) !important;
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-bottom: 1px solid rgba(255,255,255,0.08);
    }
    [data-bs-theme="light"] .navbar-glass {
      background: rgba(255,255,255,0.65) !important;
      backdrop-filter: blur(12px);
      border-bottom: 1px solid rgba(0,0,0,0.08);
    }

    .card-modern {
      background: rgba(30, 41, 59, 0.6);
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.4s ease;
      backdrop-filter: blur(8px);
    }
    [data-bs-theme="light"] .card-modern {
      background: rgba(255,255,255,0.75);
      border: 1px solid rgba(0,0,0,0.08);
    }

    .card-modern:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.4);
    }
    [data-bs-theme="light"] .card-modern:hover {
      box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .img-overlay {
      position: relative;
    }
    .img-overlay::after {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 60%);
    }
    .img-overlay img {
      transition: transform 0.6s ease;
    }
    .card-modern:hover .img-overlay img {
      transform: scale(1.08);
    }

    .theme-btn {
      font-size: 1.4rem;
      background: none;
      border: none;
      color: inherit;
      cursor: pointer;
    }

    .avatar-circle {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      background: linear-gradient(45deg, #dc3545, #ff6b6b);
      color: white;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.3rem;
      box-shadow: 0 4px 12px rgba(220,53,69,0.4);
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-glass fixed-top">
    <div class="container">
      <a class="navbar-brand fw-bold fs-4" href="/">Posts</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/api/new">+ Add Post</a></li>
        </ul>

        <div class="d-flex align-items-center gap-4">
          <button id="themeToggle" class="theme-btn" title="Toggle theme">
            <i id="themeIcon" class="bi bi-moon-stars-fill"></i>
          </button>

          <% if (currentUser) { %>
            <div class="dropdown">
              <button class="btn btn-link p-0" data-bs-toggle="dropdown">
                <div class="d-flex align-items-center gap-2">
                  <div class="avatar-circle">
                    <%= (currentUser.username || currentUser.email || 'U').charAt(0).toUpperCase() %>
                  </div>
                  <span class="d-none d-md-block text-white fw-medium">
                    <%= currentUser.username || currentUser.email?.split('@')[0] || 'User' %>
                  </span>
                </div>
              </button>
              <ul class="dropdown-menu dropdown-menu-end shadow-lg">
                <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i> Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <form action="/logout" method="POST">
                    <button type="submit" class="dropdown-item text-danger">
                      <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                  </form>
                </li>
              </ul>
            </div>
          <% } else { %>
            <a href="/login" class="btn btn-outline-light btn-sm px-4">Login</a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <main class="container pt-5 mt-5">
    <!-- Debug (remove later) -->
    <div class="alert alert-secondary mb-4">
      Logged in as: <strong><%= currentUser ? (currentUser.username || currentUser.email) : 'Guest' %></strong>
    </div>

    <div class="row g-4">
      <% if (alldata && alldata.length > 0) { %>
        <% alldata.forEach(post => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card-modern h-100">
              <div class="img-overlay">
                <% if (post.img?.url) { %>
                  <img src="<%= post.img.url %>" class="card-img-top" alt="<%= post.name || 'Post'" style="height: 240px; object-fit: cover;">
                <% } else { %>
                  <div class="bg-dark d-flex align-items-center justify-content-center" style="height: 240px;">
                    <i class="bi bi-image text-secondary fs-1"></i>
                  </div>
                <% } %>
                <div class="position-absolute bottom-0 start-0 end-0 p-4 text-white">
                  <h5 class="card-title mb-1"><%= post.name || 'Untitled' %></h5>
                </div>
              </div>

              <div class="card-body">
                <div class="d-flex gap-2 mb-3">
                  <span class="badge bg-danger-subtle text-danger"><%= post.deg || 'Degree' %></span>
                  <span class="badge bg-secondary-subtle text-secondary"><%= post.age ? post.age + ' yrs' : 'Age ?' %></span>
                </div>

                <p class="text-muted small mb-4">
                  By <%= post.owner?.username || post.owner?.email || 'Anonymous' %>
                </p>

                <% if (currentUser && currentUser._id?.toString() === post.owner?._id?.toString()) { %>
                  <div class="d-flex gap-2">
                    <a href="/api/update/<%= post._id %>" class="btn btn-sm btn-warning flex-fill">Update</a>
                    <form action="/api/delete/<%= post._id %>?_method=DELETE" method="POST" class="m-0 flex-fill">
                      <button type="submit" class="btn btn-sm btn-outline-danger w-100" onclick="return confirm('Delete karna pakka?')">Delete</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center py-5">
          <i class="bi bi-emoji-frown fs-1 text-muted mb-3 d-block"></i>
          <h4>No posts yet...</h4>
          <a href="/api/new" class="btn btn-danger mt-3 px-5">Add First Post</a>
        </div>
      <% } %>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const html = document.documentElement;
    const toggle = document.getElementById('themeToggle');
    const icon = document.getElementById('themeIcon');

    function updateTheme(isDark) {
      html.setAttribute('data-bs-theme', isDark ? 'dark' : 'light');
      icon.className = isDark ? 'bi bi-sun-fill' : 'bi bi-moon-stars-fill';
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    }

    let savedTheme = localStorage.getItem('theme');
    if (!savedTheme) {
      savedTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }
    updateTheme(savedTheme === 'dark');

    toggle.addEventListener('click', () => {
      const current = html.getAttribute('data-bs-theme') === 'dark';
      updateTheme(!current);
    });
  </script>
</body>
</html>