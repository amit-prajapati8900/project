<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root {
      --bg: #0f0f1a;
      --card-bg: rgba(20, 25, 45, 0.65);
      --glow: rgba(100, 200, 255, 0.55);
      --accent: #64c8ff;
      --text: #e0f0ff;
      --border: rgba(100, 200, 255, 0.18);
    }

    body {
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
      padding-top: 80px;
      font-family: 'Segoe UI', system-ui, sans-serif;
      overflow-x: hidden;
    }

    .gallery-item {
      cursor: pointer;
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
      border-radius: 12px;
      border: 1px solid var(--border);
      background: var(--card-bg);
      backdrop-filter: blur(8px);
      box-shadow: 0 6px 20px rgba(0,0,0,0.5);
    }

    .gallery-item:hover {
      transform: translateY(-8px) scale(1.04);
      box-shadow: 0 15px 40px rgba(100, 200, 255, 0.35);
      border-color: var(--accent);
    }

    .gallery-item img {
      width: 100%;
      height: 220px;
      object-fit: cover;
      transition: transform 0.6s ease;
    }

    .gallery-item:hover img {
      transform: scale(1.12);
    }

    /* Particles */
    .particles {
      position: absolute;
      inset: 0;
      pointer-events: none;
      overflow: hidden;
      z-index: 1;
    }

    .particle {
      position: absolute;
      background: var(--accent);
      border-radius: 50%;
      box-shadow: 0 0 10px var(--accent);
      animation: float linear infinite;
      opacity: 0;
    }

    @keyframes float {
      0%   { transform: translateY(100%) scale(0.2); opacity: 0; }
      15%  { opacity: 0.7; }
      85%  { opacity: 0.5; }
      100% { transform: translateY(-120%) scale(0.5); opacity: 0; }
    }

    /* Pill with user avatar on right */
    .post-meta-pill {
      background: rgba(30, 40, 70, 0.7);
      backdrop-filter: blur(10px);
      border-radius: 50px;
      padding: 0.5rem 1rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin: 0.75rem 1rem 1rem;
      border: 1px solid rgba(100, 200, 255, 0.25);
    }

    .post-meta-pill .user-avatar {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid var(--accent);
      box-shadow: 0 0 12px rgba(100, 200, 255, 0.4);
      flex-shrink: 0;
    }

    .post-meta-pill .user-info {
      flex: 1;
      margin-left: 0.9rem;
      text-align: left;
    }

    .post-meta-pill .username {
      font-weight: 600;
      color: var(--accent);
      font-size: 0.95rem;
    }

    .post-meta-pill .posted-by {
      font-size: 0.8rem;
      opacity: 0.8;
    }

    /* Modal styles (same as before) */
    .modal-content {
      background: rgba(20, 25, 45, 0.9);
      backdrop-filter: blur(12px);
      border: 1px solid var(--accent);
      color: var(--text);
      border-radius: 16px;
    }

    .modal-header { border-bottom: 1px solid rgba(100, 200, 255, 0.3); }
    .modal-title { color: var(--accent); text-shadow: 0 0 10px rgba(100, 200, 255, 0.5); }
    .modal-body img { width: 100%; max-height: 60vh; object-fit: contain; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.6); }
    .detail-text strong { color: #a0d8ff; }
    .alert-info { background: rgba(25, 45, 80, 0.7); border: 1px solid rgba(100, 200, 255, 0.3); color: #d0e8ff; backdrop-filter: blur(10px); }
    .btn-danger { background: linear-gradient(45deg, #ff416c, #ff4b2b); }
    .btn-danger:hover { transform: scale(1.05); }
  </style>
</head>
<body>

  <%- include('partials/navbar') %>

  <div class="container mt-5">
    <!-- Flash messages -->
    <%- include("partials/flash.ejs") %>

    <!-- Add New Button -->
    <div class="mb-5 text-center">
      <a href="/api/new" class="btn btn-danger btn-lg px-5 py-3 fw-bold">Add New Post</a>
    </div>

    <!-- Debug Info -->
    <div class="alert alert-info mb-5 shadow-lg">
      <strong>Debug Info:</strong><br>
      Logged in as: <strong><%= currentUser ? (currentUser.username || currentUser.email || 'No name') : 'Not logged in' %></strong><br>
      User ID: <strong><%= currentUser ? currentUser._id : 'No ID' %></strong>
    </div>

    <!-- Gallery Grid -->
    <div class="row g-4">
      <% if (alldata && alldata.length > 0) { %>
        <% alldata.forEach(data => { %>
          <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <div class="gallery-item" 
                 data-bs-toggle="modal" 
                 data-bs-target="#postModal-<%= data._id %>">
              <div class="position-relative">
                <% if (data.img && data.img.url) { %>
                  <img src="<%= data.img.url %>" alt="<%= data.name || 'Post Image' %>" loading="lazy">
                <% } else { %>
                  <div class="d-flex align-items-center justify-content-center bg-dark text-white" style="height: 220px;">
                    No Image
                  </div>
                <% } %>
                <div class="particles" id="particles-<%= data._id %>"></div>
              </div>

              <!-- Pill with user image on right -->
              <div class="post-meta-pill">
                <div class="user-info">
                  <div class="username"><%= data.name || 'Untitled' %></div>
                  <div class="posted-by">by <%= data.owner?.username || 'Unknown' %></div>
                </div>
                <img 
                  src="<%= data.owner?.profilePic || data.owner?.avatar || 'https://via.placeholder.com/42/333/fff?text=U' %>" 
                  alt="User" 
                  class="user-avatar ms-2">
              </div>
            </div>

            <!-- Modal (same as before) -->
            <div class="modal fade" id="postModal-<%= data._id %>" tabindex="-1" aria-labelledby="postModalLabel-<%= data._id %>" aria-hidden="true">
              <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="postModalLabel-<%= data._id %>"><%= data.name || 'Post Details' %></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body text-center">
                    <% if (data.img && data.img.url) { %>
                      <img src="<%= data.img.url %>" alt="<%= data.name || 'Full Image' %>" class="mb-4">
                    <% } else { %>
                      <div class="bg-dark text-white p-5 mb-4 rounded">No Image Available</div>
                    <% } %>

                    <div class="detail-text">
                      <p><strong>Degree:</strong> <%= data.deg || 'N/A' %></p>
                      <p><strong>Age:</strong> <%= data.age || 'N/A' %></p>
                      <p><strong>Posted by:</strong> <%= data.owner?.username || data.owner?.email || 'Unknown' %></p>
                    </div>

                    <% if (currentUser && data.owner && currentUser._id && data.owner._id && currentUser._id.toString() === data.owner._id.toString()) { %>
                      <div class="mt-4 d-flex justify-content-center gap-3">
                        <a href="/api/update/<%= data._id %>" class="btn btn-warning px-4">Update</a>
                        <form action="/api/delete/<%= data._id %>?_method=DELETE" method="POST" class="d-inline">
                          <button type="submit" class="btn btn-danger px-4" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                      </div>
                    <% } %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info text-center py-5">
            No posts found. Be the first to <a href="/api/new" class="text-warning fw-bold">add one</a>!
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Particles Script -->
  <script>
    function createParticles(containerId, count = 10) {
      const container = document.getElementById(containerId);
      if (!container) return;

      for (let i = 0; i < count; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        const size = Math.random() * 4 + 2;
        particle.style.width = `${size}px`;
        particle.style.height = `${size}px`;
        particle.style.left = `${Math.random() * 100}%`;
        particle.style.bottom = `-${Math.random() * 30}px`;
        particle.style.animationDelay = `${Math.random() * 8}s`;
        particle.style.animationDuration = `${Math.random() * 7 + 9}s`;
        container.appendChild(particle);
      }
    }

    document.querySelectorAll('.particles').forEach(el => {
      const id = el.id;
      if (id) createParticles(id, 8 + Math.floor(Math.random() * 8));
    });
  </script>

</body>
</html>