<!DOCTYPE html>
<html lang="en" class="scroll-smooth" x-data="{ darkMode: localStorage.getItem('darkMode') === 'true', showLogin: true }">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Modern Auth - Login & Signup</title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Alpine.js for reactivity (dark mode + form toggle) -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

  <style>
    /* Smooth transitions */
    body { transition: background-color 0.4s, color 0.4s; }
    .bg-image {
      background-image: url('https://thumbs.dreamstime.com/b/glowing-tech-circuit-lines-dark-blue-background-digital-grid-futuristic-light-pulse-center-389376521.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }
    .form-card {
      transition: all 0.4s ease;
    }
  </style>
</head>

<body 
  class="bg-image min-h-screen font-sans antialiased flex items-center justify-center p-6"
  :class="{ 'dark bg-gray-950 bg-opacity-80': darkMode, 'bg-gray-50 bg-opacity-10': !darkMode }"
  x-init="
    if (darkMode) document.documentElement.classList.add('dark');
    else document.documentElement.classList.remove('dark');
    $watch('darkMode', value => {
      localStorage.setItem('darkMode', value);
      if (value) document.documentElement.classList.add('dark');
      else document.documentElement.classList.remove('dark');
    })
  "
>

  <!-- Dark Mode Toggle Button -->
  <button 
    @click="darkMode = !darkMode"
    class="fixed top-6 right-6 z-50 p-3 rounded-full bg-white/20 backdrop-blur-md text-gray-800 dark:text-gray-200 hover:bg-white/30 dark:hover:bg-gray-800/50 transition shadow-lg"
  >
    <i x-show="!darkMode" class="fas fa-moon text-xl"></i>
    <i x-show="darkMode" class="fas fa-sun text-xl"></i>
  </button>

  <!-- Main Auth Container -->
  <div class="w-full max-w-md">

    <!-- Glassmorphism Card -->
    <div class="form-card backdrop-blur-xl bg-white/10 dark:bg-gray-900/40 border border-white/20 dark:border-gray-700/50 rounded-2xl shadow-2xl overflow-hidden">

      <!-- Header -->
      <div class="p-8 text-center border-b border-white/10 dark:border-gray-700/40">
        <h1 class="text-3xl font-bold text-white drop-shadow-lg">
          <span x-show="showLogin">Welcome Back</span>
          <span x-show="!showLogin">Join Us</span>
        </h1>
        <p class="mt-2 text-gray-200 dark:text-gray-300">
          <span x-show="showLogin">Login to your account</span>
          <span x-show="!showLogin">Create your new account</span>
        </p>
      </div>

      <!-- Form Area -->
      <div class="p-8">

        <!-- Login Form -->
        <form x-show="showLogin" class="space-y-5">
          <div>
            <label class="block text-sm font-medium text-gray-200 mb-1">Email / Username</label>
            <input 
              type="text" 
              class="w-full px-4 py-3 bg-white/10 dark:bg-gray-800/50 border border-white/20 dark:border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-blue-400 focus:ring-1 focus:ring-blue-400 transition"
              placeholder="you@example.com"
              required
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-200 mb-1">Password</label>
            <input 
              type="password" 
              class="w-full px-4 py-3 bg-white/10 dark:bg-gray-800/50 border border-white/20 dark:border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-blue-400 focus:ring-1 focus:ring-blue-400 transition"
              placeholder="••••••••"
              required
            />
          </div>

          <div class="flex items-center justify-between text-sm">
            <label class="flex items-center text-gray-300">
              <input type="checkbox" class="mr-2 rounded bg-white/20 border-white/30">
              Remember me
            </label>
            <a href="#" class="text-blue-300 hover:text-blue-200 transition">Forgot password?</a>
          </div>

          <button 
            type="submit"
            class="w-full py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold rounded-lg shadow-lg hover:from-blue-700 hover:to-indigo-700 transition transform hover:scale-[1.02]"
          >
            Login
          </button>
        </form>

        <!-- Signup Form -->
        <form x-show="!showLogin" class="space-y-5">
          <div>
            <label class="block text-sm font-medium text-gray-200 mb-1">Full Name</label>
            <input 
              type="text" 
              class="w-full px-4 py-3 bg-white/10 dark:bg-gray-800/50 border border-white/20 dark:border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-blue-400 focus:ring-1 focus:ring-blue-400 transition"
              placeholder="Prajapati"
              required
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-200 mb-1">Email</label>
            <input 
              type="email" 
              class="w-full px-4 py-3 bg-white/10 dark:bg-gray-800/50 border border-white/20 dark:border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-blue-400 focus:ring-1 focus:ring-blue-400 transition"
              placeholder="you@example.com"
              required
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-200 mb-1">Password</label>
            <input 
              type="password" 
              class="w-full px-4 py-3 bg-white/10 dark:bg-gray-800/50 border border-white/20 dark:border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-blue-400 focus:ring-1 focus:ring-blue-400 transition"
              placeholder="••••••••"
              required
            />
          </div>

          <button 
            type="submit"
            class="w-full py-3 bg-gradient-to-r from-green-600 to-teal-600 text-white font-semibold rounded-lg shadow-lg hover:from-green-700 hover:to-teal-700 transition transform hover:scale-[1.02]"
          >
            Sign Up
          </button>
        </form>

        <!-- Toggle between Login & Signup -->
        <div class="mt-6 text-center text-gray-300 text-sm">
          <span x-show="showLogin">
            Don't have an account? 
            <button @click="showLogin = false" class="text-blue-300 hover:text-blue-200 font-medium">Sign up</button>
          </span>
          <span x-show="!showLogin">
            Already have an account? 
            <button @click="showLogin = true" class="text-blue-300 hover:text-blue-200 font-medium">Login</button>
          </span>
        </div>

      </div>
    </div>

    <!-- Footer note -->
    <p class="mt-8 text-center text-gray-400 dark:text-gray-500 text-sm">
      © 2026 Prajapati • Made with ❤️ in Lucknow
    </p>
  </div>

</body>
</html>