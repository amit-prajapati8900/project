<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
    <!-- <link rel="stylesheet" href="/public/style.css"> -->
     <style>
        body{
          background-image: url("/views/bgimg.jpg") !important;
        }

     </style>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <!-- Submit button -->
    <form action="/new" method="get" class="mb-3">
      <button type="submit" class="btn btn-primary">Add New</button>
    </form>

    <!-- Responsive grid for cards -->
    <div class="row">
      <% for(let data of alldata){ %>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm">
            <img src="<%= data.img %>" class="card-img-top" alt="User Image">
            <div class="card-body">
              <h5 class="card-title"><%= data.name %></h5>
              <p class="card-text">
                <strong>ID:</strong> <%= data._id %><br>
                <strong>Deg:</strong> <%= data.deg %><br>
                <strong>Age:</strong> <%= data.age %>
              </p>
              <a href="/update/<%= data._id %>" class="btn btn-sm btn-warning">Update</a>
              <form action="/delete/<%= data._id %>?_method=DELETE" method="post" class="d-inline">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
