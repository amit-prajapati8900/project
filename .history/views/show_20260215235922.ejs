<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <style>
    body { min-height: 100vh; }
    .post-thumb {
      height: 220px;
      object-fit: cover;
      transition: transform 0.35s ease;
      cursor: pointer;
    }
    .post-thumb:hover {
      transform: scale(1.06);
    }
    .no-image {
      height: 220px;
      background: #343a40;
      color: #adb5bd;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      cursor: pointer;
    }
    .modal-img {
      max-height: 70vh;
      width: 100%;
      object-fit: contain;
      border-radius: 8px;
    }
  </style>
</head>
<body>

  <%- include('partials/navbar') %>

  <div class="container mt-5 pt-3">

    <%- include("partials/flash.ejs") %>

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="mb-0">All Posts</h2>
      <a href="/api/new" class="btn btn-danger">Add New Post</a>
    </div>

    <!-- Debug (remove later) -->
    <div class="alert alert-info mb-4 small">
      Logged in as: <strong><%= currentUser ? (currentUser.username || currentUser.email || 'No name') : 'Not logged in' %></strong>
    </div>

    <div class="row g-4">
      <% if (alldata && alldata.length > 0) { %>
        <% alldata.forEach(data => { %>
          <div class="col-6 col-md-4 col-lg-3">
            <div class="card bg-dark border-secondary shadow-sm h-100">
              <% if (data.img?.url) { %>
                <img 
                  src="<%= data.img.url %>" 
                  class="post-thumb card-img-top" 
                  alt="<%= data.name || 'Post image' %>"
                  data-bs-toggle="modal"
                  data-bs-target="#postModal<%= data._id %>"
                  loading="lazy">
              <% } else { %>
                <div 
                  class="no-image"
                  data-bs-toggle="modal"
                  data-bs-target="#postModal<%= data._id %>">
                  <i class="bi bi-image"></i>
                </div>
              <% } %>
              <div class="card-body text-center py-3">
                <h6 class="card-title mb-1 text-truncate"><%= data.name || 'Untitled' %></h6>
              </div>
            </div>
          </div>

          <!-- Modal for this post -->
          <div class="modal fade" id="postModal<%= data._id %>" tabindex="-1" aria-labelledby="postModalLabel<%= data._id %>" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
              <div class="modal-content bg-dark text-light border-secondary">
                <div class="modal-header border-secondary">
                  <h5 class="modal-title" id="postModalLabel<%= data._id %>">
                    <%= data.name || 'Post Details' %>
                  </h5>
                  <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <% if (data.img?.url) { %>
                    <img src="<%= data.img.url %>" class="modal-img mb-4" alt="<%= data.name || 'Post image' %>">
                  <% } else { %>
                    <div class="bg-secondary text-center py-5 mb-4 rounded">
                      <i class="bi bi-image fs-1 opacity-50"></i>
                      <p class="mt-2">No image available</p>
                    </div>
                  <% } %>

                  <dl class="row g-3">
                    <dt class="col-sm-4">Degree</dt>
                    <dd class="col-sm-8"><%= data.deg || '-' %></dd>

                    <dt class="col-sm-4">Age</dt>
                    <dd class="col-sm-8"><%= data.age || '-' %></dd>

                    <dt class="col-sm-4">Posted by</dt>
                    <dd class="col-sm-8">
                      <%= data.owner?.username || data.owner?.email || 'Unknown' %>
                    </dd>
                  </dl>

                  <% if (currentUser && data.owner && currentUser._id?.toString() === data.owner._id?.toString()) { %>
                    <div class="mt-4 d-flex gap-3">
                      <a href="/api/update/<%= data._id %>" class="btn btn-warning flex-fill">Update</a>
                      <form action="/api/delete/<%= data._id %>?_method=DELETE" method="POST" class="m-0 flex-fill">
                        <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Pakka delete karna hai?')">Delete</button>
                      </form>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center py-5">
          <i class="bi bi-emoji-frown fs-1 text-muted mb-3 d-block"></i>
          <h5>No posts found</h5>
          <a href="/api/new" class="btn btn-danger mt-3">Add First Post</a>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>