<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Posts - Image Gallery</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  
  <!-- Tumhara custom CSS file -->
  <link rel="stylesheet" href="/style/style.css">
</head>
<body>

  <%- include('partials/navbar') %>

  <div class="container mt-5 pt-4">

    <%- include("partials/flash.ejs") %>

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
      <h2 class="mb-0">Image Gallery</h2>
      <a href="/api/new" class="btn btn-danger">Add New Post</a>
    </div>

    <!-- Debug (production mein hata dena) -->
    <div class="alert alert-info mb-4 small">
      Logged in as: <strong><%= currentUser ? (currentUser.username || currentUser.email || 'No name') : 'Not logged in' %></strong>
    </div>

    <div class="row g-3 g-md-4">
      <% if (alldata && alldata.length > 0) { %>
        <% alldata.forEach(data => { %>
          <div class="col-6 col-sm-4 col-md-3 col-lg-2">
            <div class="gallery-item" 
                 data-bs-toggle="modal" 
                 data-bs-target="#modal<%= data._id %>">
              <% if (data.img?.url) { %>
                <img 
                  src="<%= data.img.url %>" 
                  class="gallery-img" 
                  alt="<%= data.name || 'Post image' %>"
                  loading="lazy">
              <% } else { %>
                <div class="no-image-placeholder">
                  <i class="bi bi-image"></i>
                </div>
              <% } %>
            </div>
          </div>

          <!-- Modal -->
          <div class="modal fade" id="modal<%= data._id %>" tabindex="-1" aria-labelledby="modalLabel<%= data._id %>" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered">
              <div class="modal-content bg-dark text-light border-0 shadow-lg">
                <div class="modal-header border-secondary">
                  <h5 class="modal-title" id="modalLabel<%= data._id %>">
                    <%= data.name || 'Untitled Post' %>
                  </h5>
                  <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                  <% if (data.img?.url) { %>
                    <img src="<%= data.img.url %>" class="modal-img mb-4" alt="<%= data.name || 'Post image' %>">
                  <% } else { %>
                    <div class="bg-secondary text-center py-5 rounded mb-4">
                      <i class="bi bi-image fs-1 opacity-50"></i>
                      <p class="mt-3">No image available</p>
                    </div>
                  <% } %>

                  <div class="row g-3">
                    <div class="col-sm-4 fw-bold">Degree:</div>
                    <div class="col-sm-8"><%= data.deg || '-' %></div>

                    <div class="col-sm-4 fw-bold">Age:</div>
                    <div class="col-sm-8"><%= data.age || '-' %></div>

                    <div class="col-sm-4 fw-bold">Posted by:</div>
                    <div class="col-sm-8"><%= data.owner?.username || data.owner?.email || 'Unknown' %></div>
                  </div>

                  <% if (currentUser && data?.owner && currentUser._id?.toString() === data.owner._id?.toString()) { %>
                    <div class="mt-5 d-flex gap-3">
                      <a href="/api/update/<%= data._id %>" class="btn btn-warning flex-fill">Update</a>
                      <form action="/api/delete/<%= data._id %>?_method=DELETE" method="POST" class="m-0 flex-fill">
                        <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Delete karna pakka?')">Delete</button>
                      </form>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center py-5">
          <i class="bi bi-emoji-frown fs-1 text-muted mb-3 d-block"></i>
          <h4>No images/posts yet...</h4>
          <a href="/api/new" class="btn btn-danger mt-3 px-5">Add First Post</a>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>