<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
    body { 
      padding-top: 80px; 
      background: linear-gradient(135deg, #fff3cd 0%, #ffe69c 100%); /* light yellow gradient for warning theme */
    }

    .card-img-top { 
      height: 200px; 
      object-fit: cover; 
      transition: transform 0.5s ease; /* smooth image zoom */
    }

    /* ===== Main Card Hover Effects ===== */
    .card {
      transition: all 0.35s ease;
      border: none;
      border-radius: 12px;
      overflow: hidden;
      background: white;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08); /* initial subtle shadow */
    }

    .card:hover {
      transform: translateY(-12px) scale(1.04);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25) !important;
      border: 2px solid #fd7e14; /* orange border matching btn-danger */
    }

    /* Image zoom on card hover */
    .card:hover .card-img-top {
      transform: scale(1.12);
    }

    /* Card body hover enhancement */
    .card-body {
      transition: background-color 0.35s ease;
    }

    .card:hover .card-body {
      background-color: #fff8e1; /* very light yellow tint */
    }

    /* Buttons hover improvements */
    .card .btn {
      transition: all 0.25s ease;
      font-weight: 500;
    }

    .card:hover .btn-warning {
      background-color: #e0a800;
      border-color: #d39e00;
      transform: translateY(-3px);
      box-shadow: 0 6px 12px rgba(255, 193, 7, 0.35);
    }

    .card:hover .btn-danger {
      background-color: #c82333;
      border-color: #bd2130;
      transform: translateY(-3px);
      box-shadow: 0 6px 12px rgba(220, 53, 69, 0.35);
    }

    /* Optional: Title bold on hover */
    .card:hover .card-title {
      color: #fd7e14;
      font-weight: 700;
    }

    /* Mobile friendly - hover only where supported */
    @media (hover: hover) and (pointer: fine) {
      .card:hover {
        transform: translateY(-12px) scale(1.04);
      }
    }

    /* No posts alert styling */
    .alert-light {
      border-radius: 10px;
      background: #fff;
      border: 1px solid #ffeaa7;
    }
  </style>
</head>
<body class="bg-warning text-dark">

  <%- include('partials/navbar') %>

  <div class="container mt-5">

    <!-- Flash messages -->
    <%- include("partials/flash.ejs") %>

    <!-- Add New Button -->
    <div class="mb-4">
      <a href="/api/new" class="btn btn-danger">Add New Post</a>
    </div>

    <!-- Debug Info (temporary â€“ remove after testing) -->
    <div class="alert alert-info mb-4">
      <strong>Debug Info:</strong><br>
      Logged in as: <strong><%= currentUser ? (currentUser.username || currentUser.email || 'No name') : 'Not logged in' %></strong><br>
      User ID: <strong><%= currentUser ? currentUser._id : 'No ID' %></strong>
    </div>

    <!-- Cards Grid -->
    <div class="row">
      <% if (alldata && alldata.length > 0) { %>
        <% alldata.forEach(data => { %>
          <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow">
              <% if (data.img.url) { %>
                <img src="<%= data.img.url %>" class="card-img-top" alt="<%= data.name %>" height="200px">
              <% } else { %>
                <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                  No Image
                </div>
              <% } %>

              <div class="card-body">
                <h5 class="card-title"><%= data.name || 'No Name' %></h5>
                <p class="card-text">
                  <strong>Degree:</strong> <%= data.deg %><br>
                  <strong>Age:</strong> <%= data.age %><br>
                  <strong>Posted by:</strong> <%= data.owner?.username || data.owner?.email || 'Unknown' %>
                </p>

                <!-- Owner-only buttons -->
                <% if (currentUser && data.owner && currentUser._id && data.owner._id && currentUser._id.toString() === data.owner._id.toString()) { %>
                  <div class="mt-3">
                    <a href="/api/update/<%= data._id %>" class="btn btn-sm btn-warning me-2">Update</a>
                    <form action="/api/delete/<%= data._id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-light text-center">
            No posts found. Be the first to <a href="/api/new">add one</a>!
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
</body>
</html>