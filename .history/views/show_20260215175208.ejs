<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root {
      --bg: #0f0f1a;
      --card-bg: rgba(20, 25, 45, 0.65);
      --glow: rgba(100, 200, 255, 0.55);
      --accent: #64c8ff;
      --text: #e0f0ff;
      --border: rgba(100, 200, 255, 0.18);
    }

    body {
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
      padding-top: 80px;
      font-family: 'Segoe UI', system-ui, sans-serif;
      overflow-x: hidden;
    }

    .container {
      max-width: 1300px;
    }

    .card {
      background: var(--card-bg);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid var(--border);
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 8px 32px rgba(0,0,0,0.6);
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      position: relative;
      cursor: pointer;
      height: 100%;
    }

    .card:hover {
      transform: translateY(-12px) scale(1.03);
      box-shadow: 0 25px 60px rgba(100, 200, 255, 0.3);
      border-color: var(--accent);
    }

    .card::before {
      content: '';
      position: absolute;
      inset: -2px;
      background: linear-gradient(45deg, transparent, var(--glow), transparent);
      border-radius: 18px;
      opacity: 0;
      transition: opacity 0.5s;
      z-index: -1;
      pointer-events: none;
    }

    .card:hover::before {
      opacity: 0.75;
      animation: pulse 4s infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 0.4; }
      50%      { opacity: 0.9; }
    }

    .card-img-top {
      height: 220px;
      object-fit: cover;
      transition: transform 0.7s ease;
      width: 100%;
    }

    .card:hover .card-img-top {
      transform: scale(1.15);
    }

    /* Magical Particles */
    .particles {
      position: absolute;
      inset: 0;
      pointer-events: none;
      overflow: hidden;
      z-index: 1;
    }

    .particle {
      position: absolute;
      background: var(--accent);
      border-radius: 50%;
      box-shadow: 0 0 12px var(--accent), 0 0 20px var(--accent);
      animation: float linear infinite;
      opacity: 0;
    }

    @keyframes float {
      0%   { transform: translateY(110%) scale(0.1); opacity: 0; }
      10%  { opacity: 0.8; }
      90%  { opacity: 0.6; }
      100% { transform: translateY(-130%) scale(0.4); opacity: 0; }
    }

    .card-body {
      padding: 1.5rem;
      text-align: center;
      position: relative;
      z-index: 2;
    }

    .card-title {
      color: var(--accent);
      font-weight: 700;
      margin-bottom: 1rem;
      text-shadow: 0 0 12px rgba(100, 200, 255, 0.5);
    }

    .card-text strong {
      color: #a0d8ff;
    }

    .alert-info {
      background: rgba(25, 45, 80, 0.6);
      border: 1px solid rgba(100, 200, 255, 0.25);
      color: #d0e8ff;
      backdrop-filter: blur(10px);
    }

    .btn-danger {
      background: linear-gradient(45deg, #ff416c, #ff4b2b);
      border: none;
      transition: all 0.3s;
    }

    .btn-danger:hover {
      transform: scale(1.08);
      box-shadow: 0 10px 25px rgba(255, 75, 43, 0.4);
    }

    .btn-warning, .btn-danger {
      transition: transform 0.2s;
    }

    @media (max-width: 576px) {
      .card {
        margin-bottom: 1.5rem;
      }
    }
  </style>
</head>
<body>

  <%- include('partials/navbar') %>

  <div class="container mt-5">
    <!-- Flash messages -->
    <%- include("partials/flash.ejs") %>

    <!-- Add New Button -->
    <div class="mb-5 text-center">
      <a href="/api/new" class="btn btn-danger btn-lg px-5 py-3 fw-bold">Add New Post</a>
    </div>

    <!-- Debug Info -->
    <div class="alert alert-info mb-5 shadow-lg">
      <strong>Debug Info:</strong><br>
      Logged in as: <strong><%= currentUser ? (currentUser.username || currentUser.email || 'No name') : 'Not logged in' %></strong><br>
      User ID: <strong><%= currentUser ? currentUser._id : 'No ID' %></strong>
    </div>

    <!-- Cards Grid -->
    <div class="row g-4">
      <% if (alldata && alldata.length > 0) { %>
        <% alldata.forEach(data => { %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100">
              <div class="position-relative">
                <% if (data.img && data.img.url) { %>
                  <img src="<%= data.img.url %>" class="card-img-top" alt="<%= data.name || 'Post Image' %>">
                <% } else { %>
                  <div class="card-img-top bg-dark d-flex align-items-center justify-content-center text-white" style="height: 220px;">
                    No Image
                  </div>
                <% } %>
                <div class="particles" id="particles-<%= data._id %>"></div>
              </div>

              <div class="card-body">
                <h5 class="card-title"><%= data.name || 'Untitled' %></h5>
                <p class="card-text">
                  <strong>Degree:</strong> <%= data.deg || 'N/A' %><br>
                  <strong>Age:</strong> <%= data.age || 'N/A' %><br>
                  <strong>Posted by:</strong> <%= data.owner?.username || data.owner?.email || 'Unknown' %>
                </p>

                <% if (currentUser && data.owner && currentUser._id && data.owner._id && currentUser._id.toString() === data.owner._id.toString()) { %>
                  <div class="mt-4 d-flex justify-content-center gap-3">
                    <a href="/api/update/<%= data._id %>" class="btn btn-sm btn-warning px-4">Update</a>
                    <form action="/api/delete/<%= data._id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-danger px-4" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info text-center py-5">
            No posts found. Be the first to <a href="/api/new" class="text-warning fw-bold">add one</a>!
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Magical Particles Script -->
  <script>
    function createParticles(containerId, count = 12) {
      const container = document.getElementById(containerId);
      if (!container) return;

      for (let i = 0; i < count; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';

        const size = Math.random() * 4 + 2;
        particle.style.width = `${size}px`;
        particle.style.height = `${size}px`;
        particle.style.left = `${Math.random() * 100}%`;
        particle.style.bottom = `-${Math.random() * 20}px`; // start from bottom
        particle.style.animationDelay = `${Math.random() * 10}s`;
        particle.style.animationDuration = `${Math.random() * 8 + 10}s`;

        container.appendChild(particle);
      }
    }

    // हर कार्ड के लिए पार्टिकल्स जनरेट करो (unique ID से)
    document.querySelectorAll('.card .particles').forEach(el => {
      const id = el.id;
      if (id) {
        createParticles(id, 12 + Math.floor(Math.random() * 10)); // 12-21 particles per card
      }
    });
  </script>

</body>
</html>