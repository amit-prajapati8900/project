<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<link rel="stylesheet" href="public/style.css"/>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-5 pt-3">

    <%- include("partials/flash.ejs") %>

    <!-- Header with Toggle & Add Button -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
      <h2 class="mb-0">All Posts</h2>
      <div class="d-flex align-items-center gap-3">
        <!-- Theme Toggle Button -->
        <button id="themeToggle" class="theme-toggle" title="Toggle dark/light mode">
          <i id="themeIcon" class="bi bi-moon-stars-fill"></i>
        </button>
        <a href="/api/new" class="btn btn-danger">Add New Post</a>
      </div>
    </div>

    <!-- Debug (remove later) -->
    <div class="alert alert-info mb-4 small">
      Logged in as: <strong><%= currentUser ? (currentUser.username || currentUser.email || 'No name') : 'Not logged in' %></strong>
    </div>

    <div class="row g-4">
      <% if (alldata && alldata.length > 0) { %>
        <% alldata.forEach(data => { %>
          <div class="col-6 col-md-4 col-lg-3">
            <div class="card bg-dark border-secondary shadow-sm h-100">
              <% if (data.img?.url) { %>
                <img 
                  src="<%= data.img.url %>" 
                  class="post-thumb card-img-top" 
                  alt="<%= data.name || 'Post image' %>"
                  data-bs-toggle="modal"
                  data-bs-target="#postModal<%= data._id %>"
                  loading="lazy">
              <% } else { %>
                <div 
                  class="no-image"
                  data-bs-toggle="modal"
                  data-bs-target="#postModal<%= data._id %>">
                  <i class="bi bi-image"></i>
                </div>
              <% } %>
              <div class="card-body text-center py-3">
                <h6 class="card-title mb-1 text-truncate"><%= data.name || 'Untitled' %></h6>
              </div>
            </div>
          </div>

          <!-- Modal -->
          <div class="modal fade" id="postModal<%= data._id %>" tabindex="-1" aria-labelledby="postModalLabel<%= data._id %>" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
              <div class="modal-content bg-dark text-light border-secondary">
                <div class="modal-header border-secondary">
                  <h5 class="modal-title" id="postModalLabel<%= data._id %>">
                    <%= data.name || 'Post Details' %>
                  </h5>
                  <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <% if (data.img?.url) { %>
                    <img src="<%= data.img.url %>" class="modal-img mb-4" alt="<%= data.name || 'Post image' %>">
                  <% } else { %>
                    <div class="bg-secondary text-center py-5 mb-4 rounded">
                      <i class="bi bi-image fs-1 opacity-50"></i>
                      <p class="mt-2">No image available</p>
                    </div>
                  <% } %>

                  <dl class="row g-3 mb-0">
                    <dt class="col-sm-4 fw-bold">Degree</dt>
                    <dd class="col-sm-8"><%= data.deg || '-' %></dd>

                    <dt class="col-sm-4 fw-bold">Age</dt>
                    <dd class="col-sm-8"><%= data.age || '-' %></dd>

                    <dt class="col-sm-4 fw-bold">Posted by</dt>
                    <dd class="col-sm-8"><%= data.owner?.username || data.owner?.email || 'Unknown' %></dd>
                  </dl>

                  <% if (currentUser && data?.owner && currentUser._id?.toString() === data.owner._id?.toString()) { %>
                    <div class="mt-5 d-flex gap-3">
                      <a href="/api/update/<%= data._id %>" class="btn btn-warning flex-fill">Update</a>
                      <form action="/api/delete/<%= data._id %>?_method=DELETE" method="POST" class="m-0 flex-fill">
                        <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Delete confirm karo bhai?')">Delete</button>
                      </form>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center py-5">
          <i class="bi bi-emoji-frown fs-1 text-muted mb-3 d-block"></i>
          <h5>No posts abhi tak...</h5>
          <a href="/api/new" class="btn btn-danger mt-3 px-5">Pehla Post Daalo</a>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const html = document.documentElement;
    const toggle = document.getElementById('themeToggle');
    const icon = document.getElementById('themeIcon');

    function setTheme(isDark) {
      html.setAttribute('data-bs-theme', isDark ? 'dark' : 'light');
      icon.className = isDark ? 'bi bi-sun-fill' : 'bi bi-moon-stars-fill';
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    }

    let saved = localStorage.getItem('theme');
    if (!saved) {
      saved = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }
    setTheme(saved === 'dark');

    toggle.addEventListener('click', () => {
      const isCurrentlyDark = html.getAttribute('data-bs-theme') === 'dark';
      setTheme(!isCurrentlyDark);
    });
  </script>

</body>
</html>