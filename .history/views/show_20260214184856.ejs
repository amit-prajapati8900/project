<!DOCTYPE html>
<html lang="en" class="scroll-smooth" x-data="{ darkMode: localStorage.getItem('darkMode') === 'true' }">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Home - Prajapati Profiles</title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Alpine.js for dark mode -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  
  <style>
    body { transition: background 0.5s ease; }
    .bg-image {
      background-image: url('https://images.unsplash.com/photo-1557683316-973673baf926?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }
    .glass {
      background: rgba(255, 255, 255, 0.06);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 1px solid rgba(255, 255, 255, 0.15);
    }
    .dark .glass {
      background: rgba(20, 20, 40, 0.45);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
  </style>
</head>

<body 
  class="bg-image min-h-screen font-sans antialiased text-gray-100"
  :class="{ 'dark bg-gray-950 bg-opacity-70': darkMode }"
  x-init="
    if (darkMode) document.documentElement.classList.add('dark');
    else document.documentElement.classList.remove('dark');
    $watch('darkMode', val => {
      localStorage.setItem('darkMode', val);
      document.documentElement.classList.toggle('dark', val);
    })
  "
>

  <!-- Dark Mode Toggle -->
  <button 
    @click="darkMode = !darkMode"
    class="fixed top-6 right-6 z-50 p-4 rounded-full glass text-white hover:bg-white/20 transition shadow-xl backdrop-blur-lg"
  >
    <i x-show="!darkMode" class="fas fa-moon text-2xl"></i>
    <i x-show="darkMode" class="fas fa-sun text-2xl"></i>
  </button>

  <!-- Main Content -->
  <div class="container mx-auto px-6 py-20 md:py-32">

    <header class="text-center mb-20">
      <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight drop-shadow-2xl bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-indigo-500 to-purple-600">
        Welcome, Prajapati!
      </h1>
      <p class="mt-6 text-xl md:text-2xl text-gray-200 dark:text-gray-300 max-w-4xl mx-auto">
        Lucknow ka apna modern profile space • Add karo, dekho, enjoy karo
      </p>
    </header>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      <div class="glass rounded-3xl p-10 text-center shadow-2xl hover:scale-105 transition duration-300">
        <i class="fas fa-users text-6xl text-blue-400 mb-6"></i>
        <h3 class="text-5xl font-bold">2,057</h3>
        <p class="text-lg text-gray-300 mt-3">Total Profiles</p>
      </div>

      <div class="glass rounded-3xl p-10 text-center shadow-2xl hover:scale-105 transition duration-300">
        <i class="fas fa-eye text-6xl text-green-400 mb-6"></i>
        <h3 class="text-5xl font-bold">24.5k</h3>
        <p class="text-lg text-gray-300 mt-3">Views This Month</p>
      </div>

      <div class="glass rounded-3xl p-10 text-center shadow-2xl hover:scale-105 transition duration-300">
        <i class="fas fa-rocket text-6xl text-purple-400 mb-6"></i>
        <h3 class="text-5xl font-bold">+18%</h3>
        <p class="text-lg text-gray-300 mt-3">Growth</p>
      </div>
    </div>

    <!-- Action Buttons (including View Profile) -->
    <div class="flex flex-col sm:flex-row justify-center gap-6 md:gap-8 flex-wrap">
      <a href="/api/new" 
         class="inline-flex items-center justify-center px-10 py-5 bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 text-white text-xl md:text-2xl font-bold rounded-2xl shadow-2xl hover:from-blue-700 hover:via-indigo-700 hover:to-purple-700 transform hover:scale-105 transition duration-300">
        <i class="fas fa-plus-circle mr-3 text-2xl"></i> Add New Profile
      </a>

      <a href="/api" 
         class="inline-flex items-center justify-center px-10 py-5 glass text-white text-xl md:text-2xl font-bold rounded-2xl shadow-2xl hover:bg-white/20 dark:hover:bg-gray-800/40 transition duration-300 backdrop-blur-md">
        <i class="fas fa-list-ul mr-3 text-2xl"></i> View All Profiles
      </a>

      <!-- New: View Profile button - yeh click karne pe home page khulega (ya apna profile view page) -->
      <a href="/"  <!-- yaha '/' ko agar '/profile' ya '/home' ya '/dashboard' hai to change kar dena -->
         class="inline-flex items-center justify-center px-10 py-5 glass text-white text-xl md:text-2xl font-bold rounded-2xl shadow-2xl hover:bg-white/20 dark:hover:bg-gray-800/40 transition duration-300 backdrop-blur-md">
        <i class="fas fa-user-circle mr-3 text-2xl"></i> View Profile
      </a>
    </div>

    <footer class="mt-20 md:mt-24 text-center text-gray-400 dark:text-gray-500 text-base md:text-lg">
      © 2026 • Lucknow, Uttar Pradesh • Made with ❤️
    </footer>

  </div>

</body>
</html>