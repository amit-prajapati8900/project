<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    :root {
      --body-bg: #fff;
      --text-color: #212529;
      --card-bg: #fff;
      --muted: #6c757d;
    }
    [data-theme="dark"] {
      --body-bg: #121212;
      --text-color: #e0e0e0;
      --card-bg: #1e1e1e;
      --muted: #a0a0a0;
    }
    body {
      padding-top: 80px;
      background-color: var(--body-bg);
      color: var(--text-color);
      transition: background-color 0.3s, color 0.3s;
    }
    .card {
      background-color: var(--card-bg);
      color: var(--text-color);
      border-color: var(--muted);
      transition: all 0.3s;
    }
    .text-muted-custom {
      color: var(--muted) !important;
    }
    .navbar {
      transition: background-color 0.3s;
    }
    [data-theme="dark"] .navbar {
      background-color: #0d1117 !important;
    }
    .user-avatar {
      width: 38px;
      height: 38px;
      border-radius: 50%;
      background-color: #dc3545;
      color: white;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.1rem;
      border: 2px solid white;
    }
    .dropdown-menu {
      min-width: 180px;
    }
    .theme-toggle-btn {
      font-size: 1.4rem;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0.5rem 0.75rem;
    }
  </style>
</head>
<body>

  <!-- Enhanced Navbar with Account Dropdown -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-danger fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">Posts App</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/new">Add New Post</a>
          </li>
        </ul>

        <div class="d-flex align-items-center gap-3">

          <!-- Theme Toggle -->
          <button id="theme-toggle" class="theme-toggle-btn" title="Toggle dark/light mode">
            <span id="theme-icon">ðŸŒ™</span>
          </button>

          <!-- Account Section / Login -->
          <% if (currentUser) { %>
            <div class="dropdown">
              <button class="btn btn-link p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="d-flex align-items-center gap-2">
                  <div class="user-avatar">
                    <%= (currentUser.username || currentUser.email || 'U').charAt(0).toUpperCase() %>
                  </div>
                  <span class="text-white d-none d-md-inline fw-medium">
                    <%= currentUser.username || currentUser.email?.split('@')[0] || 'User' %>
                  </span>
                </div>
              </button>

              <ul class="dropdown-menu dropdown-menu-end shadow">
                <li>
                  <a class="dropdown-item" href="/profile">
                    <i class="bi bi-person me-2"></i> Profile
                  </a>
                </li>
                <li>
                  <a class="dropdown-item" href="/settings">
                    <i class="bi bi-gear me-2"></i> Settings
                  </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <form action="/logout" method="POST" class="m-0">
                    <button type="submit" class="dropdown-item text-danger">
                      <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                  </form>
                </li>
              </ul>
            </div>
          <% } else { %>
            <div class="d-flex gap-2">
              <a href="/login" class="btn btn-sm btn-outline-light">Login</a>
              <a href="/signup" class="btn btn-sm btn-light">Sign Up</a>
            </div>
          <% } %>

        </div>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <!-- Flash messages -->
    <%- include("partials/flash.ejs") %>

    <!-- Debug Info (remove in production) -->
    <div class="alert alert-info mb-4">
      <strong>Debug:</strong><br>
      Logged in as: <strong><%= currentUser ? (currentUser.username || currentUser.email || 'No name') : 'Not logged in' %></strong><br>
      User ID: <strong><%= currentUser ? currentUser._id : 'No ID' %></strong>
    </div>

    <!-- Cards Grid -->
    <div class="row">
      <% if (alldata && alldata.length > 0) { %>
        <% alldata.forEach(data => { %>
          <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow">
              <% if (data.img?.url) { %>
                <img src="<%= data.img.url %>" class="card-img-top" alt="<%= data.name || 'Post image' %>" style="height: 200px; object-fit: cover;">
              <% } else { %>
                <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                  No Image
                </div>
              <% } %>

              <div class="card-body">
                <h5 class="card-title"><%= data.name || 'No Name' %></h5>
                <p class="card-text">
                  <strong>Degree:</strong> <%= data.deg || '-' %><br>
                  <strong>Age:</strong> <%= data.age || '-' %><br>
                  <strong class="text-muted-custom">Posted by:</strong> 
                  <%= data.owner?.username || data.owner?.email || 'Unknown' %>
                </p>

                <% if (currentUser && data.owner && currentUser._id?.toString() === data.owner._id?.toString()) { %>
                  <div class="mt-3">
                    <a href="/api/update/<%= data._id %>" class="btn btn-sm btn-warning me-2">Update</a>
                    <form action="/api/delete/<%= data._id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-light text-center">
            No posts found. Be the first to <a href="/api/new">add one</a>!
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Theme Toggle Script -->
  <script>
    const html = document.documentElement;
    const themeToggle = document.getElementById('theme-toggle');
    const themeIcon = document.getElementById('theme-icon');

    function setTheme(theme) {
      html.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
      themeIcon.textContent = theme === 'dark' ? 'â˜€ï¸' : 'ðŸŒ™';
    }

    const savedTheme = localStorage.getItem('theme') ||
      (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    
    setTheme(savedTheme);

    themeToggle.addEventListener('click', () => {
      const current = html.getAttribute('data-theme');
      setTheme(current === 'dark' ? 'light' : 'dark');
    });
  </script>

</body>
</html>