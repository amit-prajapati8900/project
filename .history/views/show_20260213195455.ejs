<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - All Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    :root {
      --primary: #fd7e14;
      --primary-dark: #e06b00;
      --bg-light: linear-gradient(135deg, #fff8e1 0%, #ffe5b4 100%);
      --card-bg: rgba(255, 255, 255, 0.92);
    }

    [data-bs-theme="dark"] {
      --bg-light: linear-gradient(135deg, #1e1e2f 0%, #2a2a40 100%);
      --card-bg: rgba(40, 40, 60, 0.92);
      --text-color: #e0e0ff;
    }

    body {
      background: var(--bg-light);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
      transition: background 0.4s ease;
    }

    [data-bs-theme="dark"] body { color: var(--text-color); }

    .sidebar {
      position: fixed;
      top: 0; left: 0; bottom: 0;
      width: 260px;
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(12px);
      border-right: 1px solid rgba(253, 126, 20, 0.2);
      padding-top: 80px;
      z-index: 1000;
      transition: all 0.3s;
    }

    .sidebar a {
      color: #444;
      padding: 14px 24px;
      display: flex;
      align-items: center;
      gap: 12px;
      transition: all 0.3s;
    }

    .sidebar a:hover, .sidebar a.active {
      background: rgba(253, 126, 20, 0.15);
      color: var(--primary);
      border-left: 4px solid var(--primary);
    }

    [data-bs-theme="dark"] .sidebar a { color: #ddd; }
    [data-bs-theme="dark"] .sidebar a:hover,
    [data-bs-theme="dark"] .sidebar a.active { background: rgba(253, 126, 20, 0.25); }

    .main-content {
      margin-left: 260px;
      padding: 20px;
      transition: margin-left 0.3s;
    }

    .card {
      background: var(--card-bg);
      backdrop-filter: blur(10px);
      border: none;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 8px 32px rgba(0,0,0,0.08);
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .card:hover {
      transform: translateY(-12px) scale(1.03);
      box-shadow: 0 30px 60px rgba(253, 126, 20, 0.25);
      border: 2px solid var(--primary);
    }

    .card-img-top {
      height: 220px;
      object-fit: cover;
      transition: transform 0.6s ease;
    }

    .card:hover .card-img-top {
      transform: scale(1.15) rotate(2deg);
    }

    .btn-warning {
      background: var(--primary);
      border: none;
      transition: all 0.3s;
    }

    .btn-warning:hover {
      background: var(--primary-dark);
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(253, 126, 20, 0.4);
    }

    .btn-danger:hover,
    .btn-outline-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(13,110,253,0.3);
    }

    .welcome-card {
      background: linear-gradient(135deg, var(--primary) 0%, #ff9500 100%);
      color: white;
      border-radius: 20px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      box-shadow: 0 15px 40px rgba(253, 126, 20, 0.3);
    }

    .stats-card {
      text-align: center;
      padding: 1.8rem;
      border-radius: 16px;
      background: white;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .theme-toggle {
      position: fixed;
      top: 20px;
      right: 40px;
      z-index: 1100;
    }

    @media (max-width: 992px) {
      .sidebar { width: 0; overflow: hidden; }
      .main-content { margin-left: 0; }
      .sidebar.show { width: 260px; }
    }
  </style>
</head>
<body>

  <!-- Theme Toggle Button -->
  <button class="btn btn-outline-warning theme-toggle rounded-circle p-3" onclick="toggleTheme()">
    <i class="fas fa-moon"></i>
  </button>

  <!-- Sidebar -->
  <div class="sidebar">
    <div class="p-4 text-center">
      <h4 class="fw-bold text-warning mb-4">Dashboard</h4>
    </div>
    <nav class="nav flex-column">
      <a href="#" class="active"><i class="fas fa-home"></i> Home</a>
      <a href="/api/new"><i class="fas fa-plus-circle"></i> Add New Post</a>
      <a href="#"><i class="fas fa-users"></i> My Profile</a>
      <a href="#"><i class="fas fa-chart-line"></i> Stats</a>
      <a href="#"><i class="fas fa-cog"></i> Settings</a>
      <a href="#" onclick="document.querySelector('.sidebar').classList.toggle('show')"><i class="fas fa-times"></i> Close</a>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="main-content">

    <!-- Top Navbar with Working Login/Logout -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm rounded-3 mb-4">
      <div class="container-fluid">
        <button class="btn btn-warning d-lg-none" type="button" onclick="document.querySelector('.sidebar').classList.toggle('show')">
          <i class="fas fa-bars"></i>
        </button>

        <div class="d-flex align-items-center gap-3 ms-auto">
          <form class="d-flex">
            <input class="form-control me-2 rounded-pill" type="search" placeholder="Search posts..." aria-label="Search">
            <button class="btn btn-warning rounded-pill" type="submit"><i class="fas fa-search"></i></button>
          </form>

          <!-- Conditional Auth Section -->
          <% if (currentUser) { %>
            <!-- Logged In: Profile + Logout -->
            <div class="dropdown">
              <a class="d-flex align-items-center text-decoration-none dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://ui-avatars.com/api/?name=<%= currentUser.username || currentUser.email || 'User' %>&background=fd7e14&color=fff" alt="avatar" class="rounded-circle me-2" width="40" height="40">
                <span class="fw-medium"><%= currentUser.username || 'User' %></span>
              </a>
              <ul class="dropdown-menu dropdown-menu-end shadow">
                <li><a class="dropdown-item" href="/profile"><i class="fas fa-user me-2"></i> Profile</a></li>
                <li><a class="dropdown-item" href="/settings"><i class="fas fa-cog me-2"></i> Settings</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <form action="/logout" method="POST">
                    <button type="submit" class="dropdown-item text-danger"><i class="fas fa-sign-out-alt me-2"></i> Logout</button>
                  </form>
                </li>
              </ul>
            </div>
          <% } else { %>
            <!-- Not Logged In: Login + Sign Up -->
            <a href="/logIn" class="btn btn-outline-primary me-2"><i class="fas fa-sign-in-alt me-1"></i> Login</a>
            <a href="/signUp" class="btn btn-warning"><i class="fas fa-user-plus me-1"></i> Sign Up</a>
          <% } %>
        </div>
      </div>
    </nav>

    <!-- Welcome Section -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="welcome-card text-center text-white">
          <h2 class="fw-bold mb-2">Welcome back, <%= currentUser ? (currentUser.username || 'Prajapati') : 'Guest' %>! ðŸ‘‹</h2>
          <p class="lead mb-0">Explore, create & manage your awesome posts</p>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
      <div class="col-md-4">
        <div class="stats-card">
          <h5>Total Posts</h5>
          <h2 class="text-warning fw-bold"><%= alldata?.length || 0 %></h2>
          <small class="text-success">+<%= Math.floor(Math.random()*20) %> this week</small>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stats-card">
          <h5>Active Users</h5>
          <h2 class="text-warning fw-bold">1,2<%= Math.floor(Math.random()*89) %>+</h2>
          <small class="text-success">Growing daily</small>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stats-card">
          <h5>Engagement</h5>
          <h2 class="text-warning fw-bold">87%</h2>
          <small class="text-success">High interaction rate</small>
        </div>
      </div>
    </div>

    <!-- Posts Grid (your original grid code) -->
    <div class="row g-4">
      <% if (alldata && alldata.length > 0) { %>
        <% alldata.forEach(data => { %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100">
              <% if (data.img?.url) { %>
                <img src="<%= data.img.url %>" class="card-img-top" alt="<%= data.name || 'Post' %>">
              <% } else { %>
                <div class="card-img-top bg-warning-subtle d-flex align-items-center justify-content-center text-warning fs-4">
                  <i class="fas fa-image fa-3x opacity-50"></i>
                </div>
              <% } %>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-bold text-dark"><%= data.name || 'Untitled Post' %></h5>
                <p class="card-text flex-grow-1">
                  <strong>Degree:</strong> <%= data.deg || 'N/A' %><br>
                  <strong>Age:</strong> <%= data.age || 'N/A' %><br>
                  <strong>By:</strong> <%= data.owner?.username || 'Anonymous' %>
                </p>

                <% if (currentUser && data.owner && currentUser._id.toString() === data.owner._id.toString()) { %>
                  <div class="mt-auto d-flex gap-2">
                    <a href="/api/update/<%= data._id %>" class="btn btn-warning btn-sm flex-fill">Update</a>
                    <form action="/api/delete/<%= data._id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Really delete this post?')">Delete</button>
                    </form>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-warning text-center rounded-4 p-5 shadow">
            <i class="fas fa-folder-open fa-3x mb-3 d-block text-warning opacity-75"></i>
            <h4>No posts yet!</h4>
            <p class="lead">Be the first one â€” <a href="/api/new" class="fw-bold text-dark">Add New Post</a></p>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function toggleTheme() {
      const html = document.documentElement;
      const current = html.getAttribute('data-bs-theme');
      const isDark = current === 'dark';
      html.setAttribute('data-bs-theme', isDark ? 'light' : 'dark');
      const icon = document.querySelector('.theme-toggle i');
      icon.className = isDark ? 'fas fa-moon' : 'fas fa-sun';
    }
  </script>
</body>
</html>